<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.MainPage"
             Shell.NavBarIsVisible="false"
             BackgroundColor="#cabfbf">

<Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="150"/>
    </Grid.RowDefinitions>
    
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
<Image x:Name = "BgImg"
        Grid.RowSpan="3"
        Grid.ColumnSpan="3"
        Aspect="AspectFill"/>

    <Frame
    Grid.Row="0"
    Grid.Column="0"
    Margin="3"
    Padding="0"
    Grid.ColumnSpan="3"
    HeightRequest="150"

    BackgroundColor="#cccabfbf"
    VerticalOptions="End">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label Text = "Chuva:"
                TextColor="Black"
                Grid.Row = "0"
                Grid.Column = "0"/>

        <Label  x:Name="RainLabel"
                TextColor="Black"
                Grid.Row = "0"
                Grid.Column = "1"/>
        
        </Grid>
    </Frame>
    
    <Frame
    Grid.Row="1"
    Grid.Column="0"
    HeightRequest="100"
    Margin="3"
    Padding="0"
    BackgroundColor="#cccabfbf"
    VerticalOptions="Start">
    </Frame>

    <Frame
    Grid.Row="1"
    Grid.Column="1"
    HeightRequest="100"
    Margin="3"
    Padding="0"
    BackgroundColor="#cccabfbf"
    VerticalOptions="Start">
    </Frame>

    <Frame
    Grid.Row="1"
    Margin="3"
    Padding="0"
    Grid.Column="2"
    HeightRequest="100"
    BackgroundColor="#cccabfbf"
    VerticalOptions="Start">
    </Frame>

    <Frame
    Grid.Row="2"
    Grid.Column="0"
    Grid.ColumnSpan="3"
    Margin="7"
    Padding="0"
    HeightRequest="150"
    BackgroundColor="#aacabfbf"
    VerticalOptions="End">
    </Frame>




   
   
   
   
</Grid>

</ContentPage>
